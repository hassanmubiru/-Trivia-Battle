# Trivia Battle - Environment Configuration Template
# Expo/React Native App - Copy this file to .env and fill in the values

# ============================================
# GAME CONTRACT
# ============================================
# The deployed TriviaBattleV3 contract address
GAME_CONTRACT_ADDRESS=0xE40DE1f269E2aD112c6faeaA3df4ECAf2E512869

# ============================================
# NETWORK CONFIGURATION
# ============================================
# RPC endpoint for Celo Sepolia
RPC_URL=https://celo-sepolia-rpc.publicnode.com

# Celo Sepolia Chain ID
CHAIN_ID=11142220

# ============================================
# REAL CONTRACTS FLAG
# ============================================
# Set to true to use real smart contracts (production)
# Set to false for development/testing with mocks (not recommended)
USE_REAL_CONTRACTS=true

# ============================================
# REAL TOKEN ADDRESSES (Celo Sepolia)
# ============================================
# Celo Dollar - Primary stablecoin
cUSD_ADDRESS=0xc2FB5a20d07036d828cBbF2FCEE5cea02cc9Cb2f

# Wrapped USDC on Celo
USDC_ADDRESS=0x360Da2CcFE307B5CB0330d062d8D83B721811B76

# Wrapped USDT on Celo
USDT_ADDRESS=0xE5eA34847A04d197B22652be1Dc8FbFf11392239

# ============================================
# BLOCK EXPLORER
# ============================================
# Celo Sepolia Block Explorer for transaction verification
BLOCK_EXPLORER=https://celo-sepolia.blockscout.com

# ============================================
# APP CONFIGURATION
# ============================================
# Application name
APP_NAME=Trivia Battle

# Network display name
NETWORK_NAME=Celo Sepolia Testnet

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================
# NOTES
# ============================================
# - All tokens are real Celo tokens, no mocks
# - All contract addresses are for Celo Sepolia testnet
# - Get testnet cUSD from: https://celo-sepolia-faucet.vercel.app/
# - View transactions at: https://celo-sepolia.blockscout.com/
# - Mainnet migration: Update addresses for Celo mainnet
